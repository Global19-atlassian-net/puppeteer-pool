{
  "root": true,
  "extends": ["airbnb-base", "prettier"],
  "parser": "babel-eslint",
  "plugins": ["prettier"],
  "env": {
    "es6": true,
    "node": true,
    "shelljs": true,
    "jest": true
  },
  "rules": {
    "no-extend-native": 0,
    "import/no-dynamic-require": 0,
    "global-require": "off",
    "class-methods-use-this": 0,
    "no-console": 1,
    "no-plusplus": 0,
    "no-undef": 0,
    "no-underscore-dangle": "off",
    "no-use-before-define": 0,
    "import/no-cycle": 1
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
